FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SIMPLE
{
    nNonOrthogonalCorrectors 0;
	consistent      yes;
    residualControl
    {
        p       1.e-06;
        U       1.e-06;
        nuTilda 1.e-06;
    }
}

solvers
{
    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-12;
        relTol           0.01;
    };
    "U|nuTilda"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-15;
        relTol          0.05;
    }
}

relaxationFactors
{
    fields
    {
        p            0.2;
    }
    equations
    {
        U           0.5;
        nuTilda     0.5;
    }
}

